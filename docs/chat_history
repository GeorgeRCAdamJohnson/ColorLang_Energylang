for i, (r, g, b) in enumerate(pixels):
    if r > 0 or g > 0 or b > 0:  # Skip black pixels
        h, s, v = colorsys.rgb_to_hsv(r/255, g/255, b/255)
        h_deg = h * 360
        s_pct = s * 100
        v_pct = v * 100
        print(f'Pixel {i}: RGB=({r},{g},{b}) -> HSV=({h_deg:.1f}Â°, {s_pct:.1f}%, {v_pct:.1f}%)')
        print(f'  Expected string index should be 1 for Hello, World!')
        print(f'  Current mapping: sat={s_pct:.1f} -> index={int(s_pct/10)}')
        break
